{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}
    <div class="container">

        <div class="row">
            <div class="col-md-4" >
                <h1 class="bg-yellow">Мої Публікації </h1>
            </div>
        </div>
        <div class="card-columns">
            {% for post in posts  %}
                <div class="card card-body text-xs-center">
                    <h4 class="card-title ">{{ post.title }}</h4>
                    <p class="card-text"><p>{{post.text}} </p></p>
                    <p><a class="btn btn-info" href="{{ path('page', {'url': post.url}) }}" role="button">Детальніше »</a></p>
                    <p class="card-text"><small class="text-muted">{{  post.cratedAt|date("m/d/Y")}}</small></p>
                </div>
            {% endfor %}
        </div>
        <div class="row justify-content-center">
            <a class="btn btn-info" style="margin-bottom: 20px" href="{{ path('public', {'offset': offset+6}) }}" role="button">Більше »</a>
        </div>
    </div>
{% endblock %}
